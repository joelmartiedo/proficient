
<div class="proficient-liquid-section" style="padding: 5px 10px; background-color: {{ section.settings.color }};">
    <div style="text-align: center;">
      {{ section.settings.title }}
    </div>
    <div style="text-align: justify">
      {{ section.settings.description }}
    </div>
  </div>
  
  {% schema %}
  {
    "name": "t:sections.proficient-liquid.name",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "t:sections.proficient-liquid.settings.title.default",
            "label": "t:sections.proficient-liquid.settings.title.label"
        },
        {
            "type": "richtext",
            "id": "description",
            "default": "t:sections.proficient-liquid.settings.description.default",
            "label":  "t:sections.proficient-liquid.settings.description.label"
        },

      {
        "type": "color",
        "id": "color",
        "label": "t:sections.proficient-liquid.settings.color.label",
        "default": "#FFFFFF"
      },
      
    ],
    "presets": [
      {
        "name": "t:sections.proficient-liquid.presets.name"
      }
    ]
  }
  {% endschema %}
  